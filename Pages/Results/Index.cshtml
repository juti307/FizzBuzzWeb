@page
@model FizzBuzzWeb.Pages.Results.IndexModel

@{
    ViewData["Title"] = "Ostatnio szukane";
}

<h1>Zobacz, co ostatnio szukałeś:</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Czas
            </th>
            <th>
                Szukana wartość
            </th>
            <th>
                Wynik
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Searches) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
@if (item.User != null && item.User == Model.GetUser)
{
                <a asp-page="./Delete" asp-route-id="@item.Id">Usuń</a>
}
            </td>
        </tr>
}
    </tbody>
</table>
